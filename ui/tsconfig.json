{
  "compilerOptions": {
    "target": "es2018",
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "noEmitOnError": true,
    "lib": ["es2021", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
